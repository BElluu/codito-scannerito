{
  "name": "coditoscannerito",
  "version": "1.0.0",
  "private": true,
  "description": "Fast barcode and QR code scanning library for web applications",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "npm run dev -w @coditoscannerito/react-demo",
    "build": "npm run build -w @coditoscannerito/core && npm run build -w @coditoscannerito/react",
    "build:core": "npm run build -w @coditoscannerito/core",
    "build:react": "npm run build -w @coditoscannerito/react"
  },
  "keywords": [
    "barcode",
    "qr-code",
    "scanner",
    "react",
    "zxing"
  ],
  "author": "Bart≈Çomiej Komendarczuk <bkomendarczuk@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/BElluu/codito-scannerito.git"
  },
  "bugs": {
    "url": "https://github.com/BElluu/codito-scannerito/issues"
  },
  "homepage": "https://github.com/BElluu/codito-scannerito#readme",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.9.3",
    "vite": "^6.0.0"
  },
  "engines": {
    "node": ">=16"
  }
}
