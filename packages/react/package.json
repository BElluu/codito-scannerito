{
  "name": "@coditoscannerito/react",
  "version": "1.0.0",
  "type": "module",
  "description": "React components for barcode and QR code scanning",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && npm run build:css",
    "build:css": "node -e \"require('fs').copyFileSync('src/styles.css', 'dist/styles.css')\"",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "barcode",
    "qr-code",
    "scanner",
    "react",
    "react-component",
    "camera",
    "zxing"
  ],
  "author": "Bart≈Çomiej Komendarczuk <bkomendarczuk@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/BElluu/codito-scannerito.git"
  },
  "bugs": {
    "url": "https://github.com/BElluu/codito-scannerito/issues"
  },
  "homepage": "https://github.com/BElluu/codito-scannerito#readme",
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "dependencies": {
    "@coditoscannerito/core": "^1.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=16"
  }
}
